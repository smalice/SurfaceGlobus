<s:SurfaceUserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" 
    x:Class="InfoStratSample.LocationView"
    >
    <Grid Width="100" Height="100">
        <s:ScatterViewItem Width="100" Height="100" RenderTransformOrigin="-0.05,0.02" 
                           d:LayoutOverrides="HorizontalAlignment, VerticalAlignment">
        	<s:ScatterViewItem.Background>
        		<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        			<GradientStop Color="SteelBlue"/><!--#FF2199DC-->
        			<GradientStop Color="#FFDFE9EE" Offset="1"/>
        		</LinearGradientBrush>
        	</s:ScatterViewItem.Background>
        </s:ScatterViewItem>
    </Grid>
</s:SurfaceUserControl>
